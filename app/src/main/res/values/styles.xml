<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


    <style name="RankingListItemFontRemark">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000080</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">20dp</item>
    </style>

    <style name="RankingTitle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#DAA520</item>
        <item name="android:background">#FFFAFA</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">20dp</item>
    </style>

    <style name="RankingListItem">
        <item name="android:background">#FFFAFA</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="RankingListItemFontTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000080</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">20dp</item>
    </style>

    <style name="RankingListItemFontAddress">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000080</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">20dp</item>
    </style>

    <style name="RankingListItemFontCount">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000080</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TitleStyle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#DAA520</item>
        <item name="android:background">#FFFAFA</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>


    <!--  Rating Style  -->
    <style name="RatingColor">
        <item name="android:background">#FFFAFA</item>
    </style>

    <style name="LayoutStyle" parent="RatingColor">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="RatingTitle" parent="LayoutStyle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#DAA520</item>
    </style>

    <style name="RatingSubmitButton" parent="LayoutStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#DAA520</item>
        <item name="android:background">#FFFAFA</item>
    </style>

    <style name="RatingTableRow" parent="RatingColor">
        <item name="android:padding">10dp</item>
        <!--<item name="android:paddingTop">10dp</item>-->
        <!--<item name="android:paddingBottom">10dp</item>-->
        <!--<item name="android:paddingRight">10dp</item>-->
        <!--<item name="android:paddingLeft">10dp</item>-->
    </style>

    <style name="RatingLabel">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#DAA520</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>


    <!-- MainActivity -->
    <style name="MainActivity_MenuButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

    </style>
</resources>
