            android:label="@string/title_activity_display_detail"></activity>
        <activity
            android:name=".UserRegistActivity"
            android:label="@string/title_activity_user_regist"></activity>
        <activity
            android:name=".SelectRankingActivity"
            android:label="@string/title_activity_select_ranking"></activity>
        <activity
            android:name=".UserInformationUpdateActivity"
